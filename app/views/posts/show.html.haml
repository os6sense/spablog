- content_for :navigation do
  = Post.new.decorate.admin_buttons(:new)

.container-fluid
  .row
    .col-md-12
      %p#notice= notice
  .row
    .col-md-9
      = @post.title.html_safe
    .col-md-3.pull-right
      = @post.created_at.to_s(I18n.t('date'))
  .row
    .col-md-12
      = @post.content.html_safe
  .row
    .col-md-8
    .col-md-4
      .pull-right
        = @post.admin_buttons([:change, :delete])

= @post.user_buttons(:back)
