.container-fluid.post
  .row.header
    .col-md-10.col-xs-10.title
      = post.title.html_safe
    .col-md-2.col-xs-2.date
      .pull-right
        = (d = post.publication_date) ? d.to_formatted_s(:short) : 'unpublished'
  .row
    .col-md-12.col-xs-12.summary
      = post.summary(512).html_safe
  .row.footer
    .container-fluid
      .row
        .col-md-12.col-xs-12
          %b 
            TAGS: 
          FRED BOB RINGO
      .row
        .col-md-4.col-xs-4
          %b
            VIEWS: 
          = "#{rand(20000)}"
        .col-md-4.col-xs-4
          %b 
            COMMENTS:
          = "#{rand(20000)}"
        .col-md-4.col-xs-4
          = post.user_buttons(:view)
          = post.admin_buttons([:change, :delete])
